// Basic Domains
// =============

<%- @basic_zones.each do |zone| -%>
zone "<%= zone %>" {
  type <%= @type %>;
  <%- if @type == 'master' -%>
  file "zones.d/basic.db";

  allow-transfer {
		slaves;
  };
  <%- elsif @type == 'slave' -%>
  file "<%= zone %>.db";

  masters {
    <%= @master_ip %>;
  };
  <%- end -%>
};

<%- end -%>
