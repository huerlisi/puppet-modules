// ACLs
// ====
acl "local_net" { 127.0.0.0/8; };
acl "dmz_cyt_ch_net" { 10.0.0.0/8; };
acl "zug_cyt_ch_net" { 192.168.0.0/16; };
acl "layer1_cyt_ch_net" { 77.109.141.208/28; };
acl "internal_net" { local_net; dmz_cyt_ch_net; zug_cyt_ch_net; };
acl "cyt_ns_hosts" { 77.109.141.213; 77.109.141.214; 10.0.2.1; 10.0.2.3; 10.0.2.5; 77.109.144.73; 212.101.25.221;};

// Internal
// ========
zone "dmz.cyt.ch" {
        type master;
        file "/etc/bind/zones.d/dmz.cyt.ch.db";

        allow-query {
		internal_net;
        };

        allow-transfer {
                cyt_ns_hosts;
        };
};

zone "zug.cyt.ch" {
        type master;
        file "/etc/bind/zones.d/zug.cyt.ch.db";

        allow-query {
		internal_net;
        };

        allow-transfer {
                cyt_ns_hosts;
        };
};

